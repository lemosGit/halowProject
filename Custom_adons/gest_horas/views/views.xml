<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <!--VIEWS PERTENCENTES AO MODELO HORARIO (PARA VER AS GRADES DE HORARIOS) -->

<record id="view_tree_ver_horario" model="ir.ui.view">
    <field name="name">view tree ver horario</field>
    <field name="model">horario</field>
    <field name="arch" type="xml">
        <tree>
            
            <field name="professor"/>
            <field name="disponibilidade"/>
            <field name="disciplina"/>
            <field name="sala"/>
            <field name="dia_semana"/>
            <field name="hora_inicio"/>
            <field name="hora_fim" />
              
        </tree>
    </field>
</record>

 <!--VIEWS PERTENCENTES AO MODELO HORARIO (PARA CRIAR) -->
    
<record id="view_form_criar_horario" model="ir.ui.view">
    <field name="name">view form criar horario</field>
    <field name="model">horario</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="professor"/>
                    <field name="disponibilidade"/>
                    <field name="disciplina"/>
                    <field name="sala"/>
                    <field name="dia_semana"/>
                    <field name="hora_inicio"/>
                    <field name="hora_fim" />
                </group>
            </sheet>
        </form>
    </field>
</record>

